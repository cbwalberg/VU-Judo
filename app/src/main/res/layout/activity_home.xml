<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="vu.judo.app.HomeActivity">

    <TextView
        android:id="@+id/homeUserName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="50dp"
        android:layout_marginTop="25dp"
        android:textSize="25sp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintVertical_bias="0.0"
        app:layout_constraintHorizontal_bias="0.0" />

    <TextView
        android:id="@+id/homeWeeklyScore"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="0dp"
        android:layout_marginTop="10dp"
        android:textSize="15sp"
        android:text="@string/weeklyScore"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toRightOf="@id/homeUserName"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toTopOf="@id/homeUserName"
        app:layout_constraintVertical_bias="0.0"
        app:layout_constraintHorizontal_bias="0.95" />

    <TextView
        android:id="@+id/homeUserWeeklyScore"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="0dp"
        android:layout_marginTop="0dp"
        android:textSize="20sp"
        app:layout_constraintTop_toBottomOf="@+id/homeWeeklyScore"
        app:layout_constraintLeft_toRightOf="@id/homeUserName"
        app:layout_constraintRight_toRightOf="@+id/homeWeeklyScore"
        app:layout_constraintBottom_toBottomOf="@id/homeUserName"
        app:layout_constraintVertical_bias="0.0"
        app:layout_constraintHorizontal_bias="1.0" />

    <TextView
        android:id="@+id/homeAllTimeScore"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="0dp"
        android:layout_marginTop="0dp"
        android:textSize="15sp"
        android:text="@string/allTimeScore"
        app:layout_constraintTop_toBottomOf="@+id/homeUserWeeklyScore"
        app:layout_constraintLeft_toRightOf="@id/homeUserName"
        app:layout_constraintRight_toRightOf="@+id/homeWeeklyScore"
        app:layout_constraintBottom_toTopOf="@id/homeUserName"
        app:layout_constraintVertical_bias="0.0"
        app:layout_constraintHorizontal_bias="1.0" />

    <TextView
        android:id="@+id/homeUserAllTimeScore"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="0dp"
        android:layout_marginTop="0dp"
        android:textSize="20sp"
        app:layout_constraintTop_toBottomOf="@+id/homeAllTimeScore"
        app:layout_constraintLeft_toRightOf="@id/homeUserName"
        app:layout_constraintRight_toRightOf="@+id/homeAllTimeScore"
        app:layout_constraintBottom_toBottomOf="@id/homeUserName"
        app:layout_constraintVertical_bias="0.0"
        app:layout_constraintHorizontal_bias="1.0" />

    <Button
        android:id="@+id/weeklyAssignmentButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="25dp"
        android:onClick="weeklyAssignment"
        android:padding="50dip"
        android:text="@string/weeklyAssignmentButton"
        android:textSize="28sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/homeUserAllTimeScore"
        app:layout_constraintVertical_bias="0.0" />

    <Button
        android:id="@+id/leaderboardButton"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="50dp"
        android:onClick="leaderboard"
        android:padding="20dip"
        android:text="@string/leaderboardButton"
        android:textSize="14sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintLeft_toLeftOf="@id/weeklyAssignmentButton"
        app:layout_constraintRight_toRightOf="@id/weeklyAssignmentButton"
        app:layout_constraintTop_toBottomOf="@id/weeklyAssignmentButton"
        app:layout_constraintVertical_bias="0.0" />

    <Button
        android:id="@+id/libraryButton"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="50dp"
        android:onClick="library"
        android:padding="20dip"
        android:text="@string/libraryButton"
        android:textSize="14sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintLeft_toLeftOf="@id/weeklyAssignmentButton"
        app:layout_constraintRight_toRightOf="@id/weeklyAssignmentButton"
        app:layout_constraintTop_toBottomOf="@id/leaderboardButton"
        app:layout_constraintVertical_bias="0.0" />

</androidx.constraintlayout.widget.ConstraintLayout>